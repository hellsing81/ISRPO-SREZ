<Page x:Class="Library.page.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Library.page"
      mc:Ignorable="d"
      d:DesignHeight="550"
      d:DesignWidth="700"
      Title="Авторизация">
    <StackPanel Margin="0 50 0 0">
        <Image Source="../img/logo_vis222.png" 
           Width="300"/>
        <StackPanel Margin="0 20 0 0"
                Width="200">
            <TextBlock Text="LOGIN" 
                 TextAlignment="Left"
                 Margin="0 0 0 5"/>
            <TextBox Width="200" 
                     
               Text="{Binding Login}" Background="#FFABADB3"/>
        </StackPanel>
        <StackPanel Margin="0 20 0 0"
                Width="200">
            <TextBlock Text="PASSWORD" 
                 TextAlignment="Left"
                 Margin="0 0 0 5"/>
            <PasswordBox x:Name="tbPassword"
               Width="200" Background="#FFABADB3" />
        </StackPanel>
        <Button Content="ENTER"
            Width="120"
            Height="35" 
            Margin="0 40 0 0"
            Click="LoginClick" Background="#FF83D4DA" BorderBrush="#FF83D4DA">

            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"></Setter>
                </Style>
            </Button.Resources>
        </Button>
    </StackPanel>
</Page>
